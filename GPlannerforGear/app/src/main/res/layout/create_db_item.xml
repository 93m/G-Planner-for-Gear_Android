<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/db_year"
        android:hint="Year"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/db_month"
        android:layout_below="@+id/db_year"
        android:hint="Month"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/db_day"
        android:layout_below="@+id/db_month"
        android:hint="Day"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/db_time"
        android:hint="Time"
        android:layout_below="@+id/db_day"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/db_time"
        android:hint="title"
        android:id="@+id/db_title"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_centerInParent="true"
        android:id="@+id/insert"
        android:layout_below="@+id/db_title" />
</RelativeLayout>